<br>
        <!-- Start Shop Page -->
        <div class="page-shop-sidebar left--sidebar bg--white section-padding--lg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-12 order-2 order-lg-1 md-mt-40 sm-mt-40">
                        <div class="shop__sidebar">
                            <aside class="wedget__categories poroduct--cat">
                                <h3 class="wedget__title">Categoria de Productos</h3>
                                <ul>
                               <% for (var i=0;i<categoria.length;i++){%>
                                    <li><a href="Catalogo?categoria=<%= categoria[i].Nombre %>"><%= categoria[i].Nombre %></a></li>
                                    <% } %>
                                </ul>
                            </aside>
                        </div>
                    </div>
                    <div class="col-lg-9 col-12 order-1 order-lg-2">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="shop__list__wrapper d-flex flex-wrap flex-md-nowrap justify-content-between">
                                </div>
                            </div>
                        </div>
                        <div class="tab__container">
                            <div class="shop-grid tab-pane fade show active" id="nav-grid" role="tabpanel">
                                <div class="row">
                                    <!-- Start Single Product -->
                                    <% for(var i=0;i<articulos.length;i++){ %>
                                    <!-- Si el articulo pertecene a la categoria entonces se muestra -->
                                    <% if (articulos[i].Categoria == categoria_actual){ %>
                                    <div class="product product__style--3 col-lg-4 col-md-4 col-sm-6 col-12">
                                        <div class="product__thumb">
                                            <a class="first__img" href="#"><img src="images\articulos\<%= articulos[i].Nombre %>1.jpg" height="270" width="340"></a>
                                            <a class="second__img animation1" href="Producto?articulo=<%= articulos[i].Nombre %>"><img src="images\articulos\<%= articulos[i].Nombre %>2.jpg" height="270" width="340"></a>

                                        </div>
                                        <div class="product__content content--center">
                                            <h4><a href="#"><%= articulos[i].Nombre %></a></h4>
                                            <ul class="prize d-flex">
                                                <li>$<%= articulos[i].Precio.toFixed(2) %></li>
                                            </ul>
                                            <div class="action">
                                                <div class="actions_inner">
                                                    
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <% }} %>
                                    <!-- End Single Product -->
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Shop Page -->
