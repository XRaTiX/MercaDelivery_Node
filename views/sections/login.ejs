            <!-- Start My Account Area -->
            <section class="my_account_area pt--80 pb--55 bg--white">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 col-12">
                            <div class="my__account__wrapper">
                            <% if (error){ %>
                            <br>
                                <div class="alert alert-danger">
                                 <strong>Datos erroneos</strong> Vuelva a intentarlo
                                </div>
                            <% } %>
                            <% if (registro == 'success'){ %>
                            <br>
                                <div class="alert alert-success">
                                    <strong>Exito!</strong> Ahora puede iniciar sesion
                                </div>
                           <% } %>
                                <h3 class="account__title">Iniciar Sesion</h3>
                                <form action="proceso-login" method="POST">
                                    <div class="account__form">
                                        <div class="input__box">
                                        <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input type="text" class="form-control" name="email" placeholder="Email" required>
                                        </div>
                                        </div>
                                        <div class="input__box">
                                        <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                            <input type="password" class="form-control" name="pass" placeholder="Contraseña" required>
                                        </div>
                                        </div>
                                        <div class="form__btn">
                                            <input type="submit" class="btn btn-primary" value="Ingresar">
                                        </div>
                                    </div>
                                </form>
                                <h4>Cliente por primera vez?</h4>
                                <button class="btn btn-primary" onclick="Redirect()">Registrarse</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

    <script>
        function Redirect(){
            location.href = 'register';
        }
    </script>